{
  "name": "Flutter Development Environment",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dart-code.flutter",
        "dart-code.dart-code",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "dart.flutterSdkPath": "/opt/flutter",
        "dart.sdkPath": "/opt/flutter/bin/cache/dart-sdk",
        "files.associations": {
          "launch.json": "json"
        }
      }
    }
  },
  "containerEnv": {
    "ANDROID_ADB_SERVER_HOST": "host.docker.internal",
    "ANDROID_ADB_SERVER_PORT": "5037",
    "ADB_INSTALL_TIMEOUT": "60",
    "FLUTTER_SUPPRESS_ANALYTICS": "true"
  },
  "runArgs": ["--name", "behindapp-dev"],
  "forwardPorts": [8080, 3000],
  "postCreateCommand": "flutter doctor -v",
  "remoteUser": "root",
  "workspaceFolder": "/workspaces/behindapp"
}
